@model Snippetgrab.Models.ProblemModel

@{
    ViewBag.Title = "Index";
    // TODO Add drop down for tags to save space
    // TODO Upvote and downvote button
}

<h2>Problems</h2>
<p>Have a problem of your own? Ask the comunity right @Html.ActionLink("here!", "Add", "Problem", new { }, htmlAttributes: null)</p>
<hr />
<div class="col-md-10">
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <p>Title</p>
            </div>
            <div class="col-md-2">
                <p>Uploader</p>
            </div>
            <div class="col-md-2">
                <p>Points</p>
            </div>
            <div class="col-md-2">
                <p>Tag</p>
            </div>
            <div class="col-md-2">
                <p>Link</p>
            </div>
        </div>

        @{
            foreach (var problem in Model.Problems)
            {
                <div class="container" style="border-bottom: solid; border-color: grey; border-width: 1px">
                    <div class="row">
                        <div class="col-md-2">
                            <p>@problem.Key.Title</p>
                        </div>
                        <div class="col-md-2">
                            <p>@problem.Value.Name</p>
                        </div>
                        <div class="col-md-2">
                            <p>@problem.Key.Points</p>
                        </div>
                        <div class="col-md-2">
                            @{
                                foreach (var tag in problem.Key.Tags)
                                {
                                    <p>@tag.Text</p>
                                }
                            }
                        </div>
                        <div class="col-md-3">
                            <p>
                                @Html.ActionLink("Details", "Detail", "Problem", new { id = problem.Key.ID }, htmlAttributes: null)
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
